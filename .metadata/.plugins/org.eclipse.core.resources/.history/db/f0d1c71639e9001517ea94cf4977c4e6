package gui;

import java.awt.Dimension;
import java.util.ArrayList;
import javax.swing.*;
import comparc.Instruction;
import comparc.Memory;
import comparc.Register;

import java.awt.BorderLayout;

public class MemoryGUI {
	private JFrame jFrame = new JFrame();
	private JPanel mainPanel = new JPanel();
	private JTable table;
	private JTextField txtNewMemoryValue;
	
	public MemoryGUI(ArrayList<Instruction> ins, ArrayList<Register> reg, ArrayList<Memory> mem){
        mainPanel.setPreferredSize (new Dimension(264, 600));
        mainPanel.setLayout (null);

	    jFrame.setDefaultCloseOperation (JFrame.EXIT_ON_CLOSE);
	    jFrame.getContentPane().add(mainPanel, BorderLayout.EAST);
	    
	    JScrollPane scrollPane = new JScrollPane();
	    scrollPane.setBounds(10, 11, 244, 467);
	    mainPanel.add(scrollPane);
	    
	    table = new JTable();
	    scrollPane.setViewportView(table);
	    
	    JPanel panel = new JPanel();
	    panel.setBounds(10, 489, 244, 70);
	    mainPanel.add(panel);
	    panel.setLayout(null);
	    
	    JLabel lblNewMemoryValue = new JLabel("New memory value for memory for ");
	    lblNewMemoryValue.setBounds(10, 11, 224, 14);
	    panel.add(lblNewMemoryValue);
	    
	    txtNewMemoryValue = new JTextField();
	    txtNewMemoryValue.setBounds(10, 36, 39, 20);
	    panel.add(txtNewMemoryValue);
	    txtNewMemoryValue.setColumns(10);
	    
	    JButton btnEdit = new JButton("Edit");
	    btnEdit.setBounds(145, 36, 89, 23);
	    panel.add(btnEdit);
	    
	    JButton btnBack = new JButton("Back");
	    btnBack.setBounds(84, 570, 89, 23);
	    mainPanel.add(btnBack);
	    jFrame.pack();
	    jFrame.setVisible (true);
	    jFrame.setLocationRelativeTo(null);
	}
}
